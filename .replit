modules = ["nodejs-20"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "FitWit App"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Database Migration"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Database Seed"

[[workflows.workflow]]
name = "FitWit App"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx expo start --no-dev --minify"
waitForPort = 8081

[[workflows.workflow]]
name = "Database Migration"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node src/db/migrate.js"

[[workflows.workflow]]
name = "Database Seed"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node src/db/seed.js"

[deployment]
run = ["sh", "-c", "npx expo start --web --port 5000"]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8081
externalPort = 8081
